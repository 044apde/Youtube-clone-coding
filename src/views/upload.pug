extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", require, type="text", maxlength=80)
        input(name="description", placeholder="Description", require, type="text", minlength=20)
        input(name="hashtags", placeholder="Hashtags, seperated by comma.", require, type="text")
        input(type="submit", value="Upload Video")